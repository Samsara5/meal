<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <properties resource="generator.properties"></properties>
    <!-- 配置数据库连接信息 -->
    <classPathEntry  location="D:\\Users\\wujiawei\\.m2\repository\\mysql\\mysql-connector-java\\8.0.20\\mysql-connector-java-8.0.20.jar"/>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!-- 取消所有注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <jdbcConnection
                driverClass="${jdbc.driverClass}"
                connectionURL="${jdbc.connectionURL}"
                userId="${jdbc.userId}"
                password="${jdbc.password}">
        </jdbcConnection>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!--指定javebean生成位置 -->
        <javaModelGenerator
                targetPackage="com.wjw.meal.Pojo"
                targetProject="src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 指定sql映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- 指定dao接口的生成位置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.wjw.meal.Dao"
                             targetProject="src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <!-- 指定每个表的生成策略 -->
<!--         <table tableName="re_user" domainObjectName="User"></table>-->
<!--         <table tableName="re_employee" domainObjectName="Employee"></table>-->
<!--         <table tableName="re_navigation" domainObjectName="Navigation"></table>-->
<!--         <table tableName="re_menu" domainObjectName="Menu"></table>-->
        <table tableName="re_store" domainObjectName="Store"></table>
    </context>
</generatorConfiguration>